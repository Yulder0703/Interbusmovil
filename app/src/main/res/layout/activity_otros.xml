<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:forceDarkAllowed="false"
    tools:context=".Otros"
    android:background="#E2F4FA">

    <Button
        android:id="@+id/btnOtr"
        android:layout_width="218dp"
        android:layout_height="58dp"
        android:layout_marginTop="140dp"
        android:backgroundTint="@color/azul"
        android:text="@string/reportar_incidente"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInformacionOtr"
        app:layout_constraintVertical_bias="0.375" />

    <EditText
        android:id="@+id/textInformacionOtr"
        android:layout_width="389dp"
        android:layout_height="97dp"
        android:hint="@string/escriba_su_informacion_exacta_para_poder_ayudarlo"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.289" />


</androidx.constraintlayout.widget.ConstraintLayout>