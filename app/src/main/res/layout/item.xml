<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blancointerbus"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/listaCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="402dp"
            android:layout_height="178dp">

            <ImageView
                android:id="@+id/Imagen1"
                android:layout_width="199dp"

                android:layout_height="172dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/autobus" />

            <TextView
                android:id="@+id/Fecha"
                android:layout_width="121dp"
                android:layout_height="98dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="23dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="59dp"
                android:layout_marginBottom="39dp"
                android:layout_toEndOf="@+id/Imagen1"
                android:gravity="center"
                android:text="Fecha"
                android:textSize="15sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/urlItem"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="119dp"
                android:layout_toEndOf="@+id/Imagen1"
                android:gravity="center"
                android:hint="Fecha:"
                android:textSize="12sp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/Latitud"
                android:layout_width="150dp"
                android:layout_height="39dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="131dp"
                android:layout_toRightOf="@+id/Imagen1"
                android:gravity="center"
                android:text="Ubicación"
                android:textSize="15sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/Observacion"
                android:layout_width="149dp"
                android:layout_height="22dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="38dp"
                android:layout_toRightOf="@+id/Imagen1"
                android:gravity="center"
                android:text="Observación"
                android:textSize="15sp"
                android:visibility="invisible" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>