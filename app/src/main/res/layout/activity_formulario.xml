<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E2F4FA"
    android:scaleType="centerCrop"
    android:forceDarkAllowed="false"
    tools:context=".Formulario">

    <ScrollView

        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:background="@color/azul"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="142dp"
                android:layout_height="139dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:srcCompat="@drawable/iconicooo" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-condensed"
                android:text="FORMULARIO DE INCIDENTES"
                android:textColor="@color/azuloscuro"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.521"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textlongitudcolision"
                android:layout_width="166dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:hint="@string/longitud"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.403"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />






            <LinearLayout
                android:id="@+id/btnReporte"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/color_btnreporte"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/textObservacionCc"
                app:layout_constraintHorizontal_bias="0.015"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textObservacionCc">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Reportar a todos"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="123dp"
                    tools:layout_editor_absoluteY="316dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnReporteDespachador"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/color_btnreporte"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/textObservacionCc"
                app:layout_constraintTop_toBottomOf="@+id/textObservacionCc">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Reportar a Despachador"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="319dp"
                android:layout_height="79dp"
                android:layout_marginTop="176dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/lnTomarfoto"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:background="@drawable/color_btn6"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">


                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="37dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        app:srcCompat="@drawable/tomarfoto"
                        tools:layout_editor_absoluteX="122dp"
                        tools:layout_editor_absoluteY="252dp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Tomar Foto"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        tools:layout_editor_absoluteX="123dp"
                        tools:layout_editor_absoluteY="316dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnOtro"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/color_btn6"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="30dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        app:srcCompat="@drawable/subirfoto"
                        tools:layout_editor_absoluteX="122dp"
                        tools:layout_editor_absoluteY="252dp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Subir Foto"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        tools:layout_editor_absoluteX="123dp"
                        tools:layout_editor_absoluteY="316dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnUbicacion"
                android:layout_width="139dp"
                android:layout_height="61dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/color_btn5"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/imgColicion"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgColicion">


                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/imgubicacion"
                    tools:layout_editor_absoluteX="122dp"
                    tools:layout_editor_absoluteY="252dp" />

                <TextView
                    android:layout_width="73dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Obtener ubicaciÃ³n"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:layout_editor_absoluteX="123dp"
                    tools:layout_editor_absoluteY="316dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textlatitudcolision"
                android:layout_width="185dp"
                android:layout_height="51dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/color_btn5"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="@string/Ubicacion"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.414"
                app:layout_constraintStart_toEndOf="@+id/lnUbicacion"
                app:layout_constraintTop_toBottomOf="@+id/imgColicion" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textObservacionCc"
                android:layout_width="354dp"
                android:layout_height="81dp"
                android:layout_marginTop="36dp"
                android:ems="10"
                android:hint="@string/observaciones"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColorHint="@color/azulbus"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/white"
                app:counterTextColor="@color/azulbus"
                app:prefixTextColor="@color/white"
                app:boxBackgroundMode="outline"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:layout_constraintEnd_toEndOf="@+id/textlatitudcolision"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/lnUbicacion"
                app:layout_constraintTop_toBottomOf="@+id/textlatitudcolision">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textObservacionC"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:maxLength="30"
                    android:textColor="@color/azulbus"
                    app:errorEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView33"
                android:layout_width="186dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:text="Debe seleccionar una imagen"
                android:textColor="@color/grayy"
                android:textSize="15sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/imgColicion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <ImageView
                android:id="@+id/imgColicion"
                android:layout_width="156dp"
                android:layout_height="118dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:srcCompat="@drawable/fotoincidente" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <include
        android:id="@+id/include"
        layout="@layout/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>